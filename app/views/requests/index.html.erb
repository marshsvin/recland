<div class="page-header">
  <h1>
    Requests
    <a href="/requests/new" class="btn btn-lg btn-success">New Request</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "requests_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
    <%= f.label :user_review_cont, "User review contains" %>
    <%= f.text_field :user_review_cont, :class => "form-control", :placeholder => "User review contains" %>
  </div>

<div class="form-group">
    <%= f.label :acceptance_eq, "Acceptance" %>
    <div>
      <label class="radio-inline">
        <%= f.radio_button :acceptance_eq, "1", checked: ((params[:q] && params[:q][:acceptance_eq]) == "1" ? "checked" : "") %> Yes
      </label>
      <label class="radio-inline">
        <%= f.radio_button :acceptance_eq, "0", checked: ((params[:q] && params[:q][:acceptance_eq]) == "0" ? "checked" : "")%> No
      </label>
      <label class="radio-inline">
        <%= f.radio_button :acceptance_eq, ""%> Either
      </label>
    </div>
  </div>

<div class="form-group">
          <%= f.label :end_date, "End date" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='end_dategteqPicker'>
                  <%= f.text_field :end_date_gteq, :class => "form-control", :placeholder => "End date greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='end_datelteqPicker'>
                  <%= f.text_field :end_date_lteq, :class => "form-control", :placeholder => "End date less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#end_dategteqPicker').datetimepicker({
                  format: 'MM/DD/YYYY'
              });
              $('#end_datelteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'MM/DD/YYYY'
              });
              $('#end_dategteqPicker').on("dp.change", function (e) {
                  $('#end_datelteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#end_datelteqPicker').on("dp.change", function (e) {
                  $('#end_dategteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

<div class="form-group">
          <%= f.label :start_date, "Start date" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='start_dategteqPicker'>
                  <%= f.text_field :start_date_gteq, :class => "form-control", :placeholder => "Start date greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='start_datelteqPicker'>
                  <%= f.text_field :start_date_lteq, :class => "form-control", :placeholder => "Start date less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#start_dategteqPicker').datetimepicker({
                  format: 'MM/DD/YYYY'
              });
              $('#start_datelteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'MM/DD/YYYY'
              });
              $('#start_dategteqPicker').on("dp.change", function (e) {
                  $('#start_datelteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#start_datelteqPicker').on("dp.change", function (e) {
                  $('#start_dategteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
      <%= f.label :user_email_cont, "User email contains" %>
      <%= f.text_field :user_email_cont, :class => "form-control", :placeholder => "User email contains" %>
    </div>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/requests" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#requests_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Property</th>
        <th>Start date</th>
        <th>End date</th>
        <th>User</th>
        <th>Acceptance</th>
        <th>User review</th>
        <th>Actions</th>
      </tr>

      <% @requests.each do |request| %>
      <tr>
        <td>
          <% if request.property.present? %>
            <a href="/properties/<%= request.property.id %>">
              <%= request.property.user_id %>
            </a>
          <% end %>
        </td>
        <td><%= request.start_date %></td>
        <td><%= request.end_date %></td>
        <td>
          <% if request.user.present? %>
            <a href="/users/<%= request.user.id %>">
              <%= request.user.email %>
            </a>
          <% end %>
        </td>
        <td><%= request.acceptance %></td>
        <td><%= request.user_review %></td>
        <td>
          <a href="/requests/<%= request.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == request.user %>
            <a href="/requests/<%= request.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_request/<%= request.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @requests, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
