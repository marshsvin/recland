<div class="page-header">
  <h1>
    Requests
    <a href="/requests/new" class="btn btn-lg btn-success">New Request</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Property</th>
        <th>Start date</th>
        <th>End date</th>
        <th>User</th>
        <th>Acceptance</th>
        <th>User review</th>
        <th>Actions</th>
      </tr>

      <% @requests.each do |request| %>
      <tr>
        <td>
          <% if request.property.present? %>
            <a href="/properties/<%= request.property.id %>">
              <%= request.property.user_id %>
            </a>
          <% end %>
        </td>
        <td><%= request.start_date %></td>
        <td><%= request.end_date %></td>
        <td>
          <% if request.user.present? %>
            <a href="/users/<%= request.user.id %>">
              <%= request.user.email %>
            </a>
          <% end %>
        </td>
        <td><%= request.acceptance %></td>
        <td><%= request.user_review %></td>
        <td>
          <a href="/requests/<%= request.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == request.user %>
            <a href="/requests/<%= request.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_request/<%= request.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @requests, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
