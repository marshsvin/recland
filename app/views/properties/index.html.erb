<div class="page-header">
  <h1>
    Properties
    <a href="/properties/new" class="btn btn-lg btn-success">New Property</a>
  </h1>
</div>


<div class="row m-b-2">
  <div class="col-md-12">
    <div>
      <div id="location_map" style="height: 480px;"></div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Address</th>
        <th>Zip code</th>
        <th>State</th>
        <th>City</th>
        <th>Acreage</th>
        <th>Description</th>
        <th>Price</th>
        <th>Actions</th>
      </tr>

      <% @properties.each do |property| %>
      <tr>
        <td>
          <% if property.user.present? %>
            <a href="/users/<%= property.user.id %>">
              <%= property.user.email %>
            </a>
          <% end %>
        </td>
        <td><%= property.address %></td>
        <td><%= property.zip_code %></td>
        <td><%= property.state %></td>
        <td><%= property.city %></td>
        <td><%= property.acreage %></td>
        <td><%= property.description %></td>
        <td><%= property.price %></td>
        <td>
          <a href="/properties/<%= property.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == property.user %>
            <a href="/properties/<%= property.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_property/<%= property.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @properties, theme: 'twitter-bootstrap-4' %>
  </div>
</div>

<script src="//maps.google.com/maps/api/js?v=3.24&key=AIzaSyCOTPWiuvyyo6sKoIBzKA4-1ol-vTOIOlM"></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script>
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'location_map'}}, function(){
    markers = handler.addMarkers(<%= raw @location_hash.to_json %>);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  });
</script>